#!groovy
// Run docker build
properties([disableConcurrentBuilds()])

pipeline {
    agent {
        label 'master'
    }
    triggers { pollSCM('*****') }
    options {
        buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
    }
    stages {
        stage("Create docker image"){
            steps {
                echo "================start build image====================="
                dir ('docker/toolbox') {
                    sh 'docker build . '
                }                
            }
        }
    }
}